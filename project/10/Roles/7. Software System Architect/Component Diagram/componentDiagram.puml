@startuml
skinparam componentStyle rectangle

package "Client" {
  component "Web UI" as WebUI
}

package "Backend" {
  component "Auth Service" as Auth
  component "User Service" as User
  component "Game Service" as Game
  component "Rating Service" as Rating
  component "Recommendation Service" as Recs
}

package "Data Storage" {
  component "Relational Database" as DB
}

WebUI --> Auth : authentication requests
WebUI --> User : user profile, preferences
WebUI --> Game : game catalog, game details
WebUI --> Rating : ratings, comments
WebUI --> Recs : get recommendations

Auth --> DB : users, credentials
User --> DB : user profiles, preferences
Game --> DB : games, metadata
Rating --> DB : ratings, comments
Recs --> DB : users, games, ratings

@enduml
