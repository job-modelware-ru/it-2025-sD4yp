@startuml
actor Player

participant "Web UI" as WebUI
participant "Recommendation Service" as Recs
participant "User Service" as User
participant "Rating Service" as Rating
participant "Game Service" as Game
database "Database" as DB

Player -> WebUI : request recommendations

WebUI -> Recs : getRecommendations(userId)

Recs -> User : getUserPreferences(userId)
User -> DB : select user preferences
DB --> User : preferences
User --> Recs : preferences

Recs -> Rating : getUserRatings(userId)
Rating -> DB : select ratings
DB --> Rating : ratings
Rating --> Recs : ratings

Recs -> Game : getGamesByGenres(preferences)
Game -> DB : select games
DB --> Game : games
Game --> Recs : games

Recs --> WebUI : recommended games
WebUI --> Player : show recommendations

@enduml
